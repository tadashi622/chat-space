
.chat
  .chat-header
    %p.chat-header__left bbb
    %p.chat-header__bottom mmm
    %p.chat-header__right 
      = link_to"#"do
        Edit
  .chat-messages
    = render @messages
    .chat-messages__messa
      .chat-messages__message-upper
        %p.chat-messages__message__upper__title bbb
        %p.chat-messages__message__upper__time vvv
      %p.chat-messages__message__text ggg

  .chat-form
    .chat-form-new 
      .chat-form-new__input
        = form_for [@group, @message] do |f|
          .chat-form-new__input__message 
            = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .chat-form-new__input__image
            = f.label :image, class: "chat-form-new__input__image" do
              = icon('far','image', class: 'icon')
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__btn'
